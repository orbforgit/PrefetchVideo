        <ComboBox x:Name="cmb_BasDakika" HorizontalAlignment="Left" Margin="527,190,0,0" VerticalAlignment="Top" Width="54"/>
        <ComboBox x:Name="cmb_Zaman" HorizontalAlignment="Left" Margin="113,241,0,0" VerticalAlignment="Top" Width="122"/>
        <ListBox x:Name="lstBox_Cameras" HorizontalAlignment="Left" MouseDoubleClick="lstBox_Cameras_MouseDoubleClick" Height="129" Margin="170,38,0,0" VerticalAlignment="Top" Width="494"/>




